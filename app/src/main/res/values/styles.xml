<resources>

    <!-- Certain portions of the style design and setup are attributed to the 2014 Google I/O open source app -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarIconColor">@color/text_light</item>
        <item name="actionBarInsetStart">@dimen/activity_horizontal_margin</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="colorButtonNormal">@color/theme_accent</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="actionMenuTextColor">@color/text_light</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#66ffffff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="ActionBar.SubTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin_double</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin_double</item>
    </style>

    <style name="TextAppearance.AppTheme.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Header" parent="android:TextAppearance.Large.Inverse">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="BaseParentText" parent="android:TextAppearance.Medium">
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="CardText" parent="@style/BaseParentText" />

    <style name="CardText.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="CardText.Title.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="CardText.Title.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="CardText.Title.Small.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>
</resources>
